MoundMinecart:
	farjump MinecartScript

MoundB3F_PaletteGreen:
	trainer EVENT_MOUND_B3F_PALETTE_GREEN, PATROLLER, 12, .before_battle_text, .battle_won_text

	ctxt "OK, du hast dir"
	line "dein Dynamit"
	cont "verdient, also"
	cont "lass mich in Ruhe."

	para "Wenn die Zeit reif"
	line "ist, werden wir"
	para "wieder auf dich"
	line "zukommen <...>"
	done

.before_battle_text
	ctxt "Du hast es so weit"
	line "geschafft <...>"

	para "<...> <PLAYER>!"

	para "Ja, ich kenne"
	line "deinen Namen <...> und"
	cont "noch viel mehr."

	para "Du entkommst uns"
	line "nicht. Wir werden"
	cont "dich immer finden!"

	para "Also lass uns"
	line "kämpfen, Kniprs!"
	done

.battle_won_text
	ctxt "Verdammt seist du!"

	para "Diesmal hast du"
	line "gewonnen <...>"
	para "<...> aber deine"
	line "#mon werden dir"
	cont "nicht immer helfen"
	cont "können!"

	para "Hinter ihnen steht"
	line "immerhin bloß ein"
	cont "hilfsloses Kind."

	para "#mon sind, genau"
	line "wie auch Menschen,"
	cont "austauschbar."
	
	para "Wir werden der"
	line "Welt schon zeigen,"
	para "wie verletzbar du"
	line "doch bist!"
	done

MoundB3F_PaletteBlue:
	trainer EVENT_MOUND_B3F_PALETTE_BLUE, PATROLLER, 9, .before_battle_text, .battle_won_text

	ctxt "Jeder muss seine"
	line "Brötchen verdienen"
	para "und das hier ist"
	line "eben mein Weg."
	
	done

.before_battle_text
	ctxt "Ach, du bist es."

	para "Du bist das Kind,"
	line "das wir suchen."

	para "Zumindest tut der"
	line "rote Ranger das <...>"

	para "Ich wollte bloß"
	line "einen Job und"
	cont "den habe ich nun."

	para "Hoffentlich mache"
	line "ich ihn auch gut."
	done

.battle_won_text
	ctxt "Ich kann nichts"
	line "dafür! Es ist"
	cont "mein erster Tag."
	done

MoundB3F_PalettePink:
	trainer EVENT_MOUND_B3F_PALETTE_PINK, PATROLLER, 6, .before_battle_text, .battle_won_text

	ctxt "Wir haben den"
	line "roten Ranger noch"
	para "nicht gesehen,"
	line "darum sind wir"
	cont "nun ganz auf uns"
	cont "allein gestellt."

	para "Solltest du ihn"
	line "treffen, sag ihm,"
	para "Pink möchte ein"
	line "ernstes Gespräch!"
	done

.before_battle_text
	ctxt "Hey."

	para "Hey!"

	para "Ignorier mich"
	line "nicht!"
	done

.battle_won_text
	ctxt "Gah, du bist genau"
	line "wie Rot!"
	done

